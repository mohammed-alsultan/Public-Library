<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="10dp"
    android:layout_marginBottom="8dp"
    android:elevation="4dp">

    <TextView
        android:id="@+id/tvBookTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvBookAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvBookCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvCopies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copies: 0"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvPenalty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Penalty per day: 0"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp">

        <!-- Admin buttons (visibility toggled in adapter) -->
        <ImageButton
            android:id="@+id/btnEditBook"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_edit"
            android:background="@android:color/transparent"
            android:contentDescription="Edit" />

        <ImageButton
            android:id="@+id/btnDeleteBook"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_delete"
            android:background="@android:color/transparent"
            android:contentDescription="Delete" />

        <!-- User button -->
        <ImageButton
            android:id="@+id/btnBorrowBook"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_input_add"
            android:background="@android:color/transparent"
            android:contentDescription="Borrow" />
    </LinearLayout>
</LinearLayout>
